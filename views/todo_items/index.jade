extends ../layout
block content
  .container
    form(action="/todo_items/create", method="post")
      p
        label Enter Todo Item
        input(id="new_todo_title", type="text", placeholder="new todo item", name="todo_title")
      p
        input(type="submit", value="save")
    
    ul
      each todo_item in todo_items
        li #{todo_item.title}